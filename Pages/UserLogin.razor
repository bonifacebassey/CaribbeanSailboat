@page "/userlogin"
@using CaribbeanSailboat.Components

<PageTitle>C.S.Charters - UserLogin</PageTitle>

<div class="login-page">
    <div class="container col-lg-6 col-md-6">
        <div class="title">Caribbean Charters</div>

        <input name="username" placeholder="username" @bind-value="@username" type="text" autocomplete="off">
        <input name="password" placeholder="password" @bind-value="@password"
            type="@(showPassword ? "text" : "password")">

        <span class="show-password">
            <input type="checkbox" @bind="@showPassword" /> Show Password
        </span>

        <div class="login">
            <StandardButton Text="LOGIN" Click="OnLogin" />
        </div>
    </div>
</div>

<Overlay @ref=overlay>
    <Alert Message="@message" AlertType="@alertType" Close="(() => overlay?.Hide())" />
</Overlay>